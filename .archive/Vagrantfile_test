# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
  #  Grab a box that works with Apple Silicon
  config.vm.box = "hashicorp-education/ubuntu-24-04"
  config.vm.box_version = "0.1.0"
  config.vm.synced_folder ".", "/vagrant", disabled: true

  #  Configure the box
  config.vm.provider "virtualbox" do |v|
    v.memory = 1024
  end

  #  Configure SSH
  config.ssh.insert_key = true
  config.ssh.keys_only = true
  config.ssh.forward_agent = true

  #  Do nessary crap to get box ready for Docker Swarm
  config.vm.provision "shell", inline: <<-SHELL
    export DEBIAN_FRONTEND=noninteractive
    apt-get update
    apt-get install -y docker.io python-is-python3 python3-pip pipx
    pipx install docker-py --include-deps
    pipx ensurepath
  SHELL

  #  Name all 6; 1-3 are managers; 4-6 are workers
  (1..6).each do |i|
    if [1,2,3].include?(i)
      config.vm.define "manager-#{i}" do |node|
        node.vm.hostname = "manager-#{i}"
    else
      config.vm.define "worker-#{i}" do |node|
        node.vm.hostname = "worker-#{i}"
    end

    #  We all like a private network
    node.vm.network "private_network", ip: "192.168.33.1#{i}"
  end

